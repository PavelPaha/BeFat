@page "/edit"

@inherits LayoutComponentBase

<PageTitle>TrackEditor</PageTitle>

<!DOCTYPE html>

<div class="container">
    <div class="home-sidebar">
        <h2>Дни недели</h2>
        <ul>
            <li> <button class="day-of-week"> Понедельник </button></li>
            <li> <button class="day-of-week"> Вторник </button></li>
            <li> <button class="day-of-week"> Среда </button></li>
            <li> <button class="day-of-week"> Четверг </button></li>
            <li> <button class="day-of-week"> Пятница </button></li>
            <li> <button class="day-of-week"> Суббота </button></li>
            <li> <button class="day-of-week"> Воскресенье </button></li>
        </ul>
    </div>

    <div class="main-content">
        <h2 class="track-header">
            Заголовок трека
        </h2>
       <div class="daily-plan">
           <ul class="product-list">
               <li>
                    <div class="product">
                       <span class="product-name">Греча</span>
                       <span class="portion-size">300 грамм</span>
                    </div>
                   <div class="action-buttons">
                       <button class="action-button edit-button">Изменить</button>
                       <button class="action-button delete-button">Удалить</button>
                   </div>
               </li>
               <li>
                   <div class="product">
                       <span class="product-name">Яйцо куриное</span>
                       <span class="portion-size">5 шт</span>
                    </div>
                   <div class="action-buttons">
                       <button class="action-button edit-button">Изменить</button>   
                       <button class="action-button delete-button">Удалить</button>
                   </div>
               </li>
               <li>
                   <div class="product">
                       <span class="product-name">Молоко</span>
                       <span class="portion-size">900 грамм</span>
                    </div>
                   <div class="action-buttons">
                        <button class="action-button edit-button">Изменить</button>
                        <button class="action-button delete-button">Удалить</button>
                   </div>
               </li>
           </ul>

           <button class="action-button add-product"><span>+</span></button>
       </div>
    </div>
      
    <div class="home-sidebar">
        <div class="user">
            <div class="user-info">
                <img src="avatar.jpg">
                <span class="username">Пользователь</span>
            </div>
            <button class="action-button">Выйти</button>
        </div>
        <div class="parameters">
            <h3>Параметры</h3>
            <p>Масса: <span>xxx кг</span></p>
            <p>Рост: <span>xxx см</span></p>
            <p>Желаемые калории: <span>xxx ккал</span></p>
        </div>
        </div>
</div>