@page "/edit"
@using BeeFat.Interfaces
@using Blazorise
@using BeeFat.Domain.Infrastructure
@inherits LayoutComponentBase

@inject IBaseRepository Repo;
@rendermode InteractiveServer

<PageTitle>TrackEditor</PageTitle>

<!DOCTYPE html>

@{
    var today = DayOfWeek.Monday;
    var user = Repo.User;
    var track = user.Track;
}

@code{
    private int portionSize = 0;
    private Modal ConfirmModal = default!;
    private Modal AddProductModal = default!;
    private FoodProduct selectedFoodProduct = null;
    private IEnumerable<FoodProduct> AvailableFoodProducts;
    private string searchValue;

    private void ChangePortionSize()
    {
        selectedFoodProduct.PortionSize = portionSize;
        Repo.UpdatePortionSize(selectedFoodProduct);
        ConfirmModal.Close(CloseReason.UserClosing);
        StateHasChanged();
    }

    private void OnSearchValueChanged(ChangeEventArgs e)
    {
        searchValue = e.Value.ToString();
        AvailableFoodProducts = Repo.GetFoodProductsByCondition(fp => fp.Name.ToLower().Contains(searchValue.ToLower()));
        StateHasChanged();
    }
}

<Blazorise.Modal @ref="ConfirmModal" Title="Modal title" Class="popup_window">
    <div>
        @if (!(selectedFoodProduct is null))
        {
            <div>Введите новый размер порции (в @(selectedFoodProduct is FoodProductGram ? "гр" : "шт"))</div>
            // portionSize = selectedFoodProduct.PortionSize;
            <input @bind="portionSize"/>
            <div>
                <Blazorise.Button Style="background-color: #c2cb88;" @onclick="ChangePortionSize">Сохранить</Blazorise.Button>
            </div>
        }
    </div>
</Blazorise.Modal>

